{
  "manifest_version": 2,
  "name": "亚马逊关键词助手",
  "description": "亚马逊关键词助手",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "48": "image/amz48.png"
  },
  "browser_action": {
    "default_title": "亚马逊关键词助手",
    "default_icon": "image/amz19.png"
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/prompt.js",
        "js/jquery-ui.min.js",
        "js/jquery.cookie.js"
        //"js/amazon.js"
        //"js/memo.js"
      ]
    },
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/prompt.js",
        "js/jquery-ui.min.js",
        "js/jquery.cookie.js",
        "js/amazon.js"
        //"js/memo.js"
      ]
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "image/logo_48.png"
  ]
}